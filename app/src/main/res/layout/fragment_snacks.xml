<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray">

        <TextView
            android:id="@+id/tv_no_snacks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No order yet"
            android:visibility="visible"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_snacks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/ordered_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txt_header"
                style="@style/LoginSignUpLabel"
                android:text="Your today's snack"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:gravity="center" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_snack"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/txt_header"
                android:layout_margin="@dimen/margin_5"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_app"/>

            <TextView
                android:id="@+id/txt_title"
                style="@style/LoginSignUpLabel"
                android:layout_below="@+id/img_snack"
                android:layout_margin="@dimen/margin_5"
                android:text="Snack's title"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_review_count"
                style="@style/LoginSignUpLabel"
                android:layout_below="@+id/txt_title"
                android:layout_margin="@dimen/margin_5"
                android:text="0 reviews"
                android:textSize="14sp"
                android:gravity="center"/>

            <RatingBar
                android:id="@+id/rating_bar"
                android:theme="@style/RatingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_review_count"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"/>

            <TextView
                android:id="@+id/txt_order_count"
                style="@style/LoginSignUpLabel"
                android:layout_below="@+id/rating_bar"
                android:layout_margin="@dimen/margin_5"
                android:text="Snack's order count"
                android:textSize="14sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_ordered_by"
                style="@style/LoginSignUpLabel"
                android:layout_below="@+id/txt_order_count"
                android:layout_margin="@dimen/margin_5"
                android:text="Snack's ordered by"
                android:textSize="14sp"
                android:gravity="center"/>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="@color/colorWhite"
            app:srcCompat="@drawable/ic_confirm"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"/>
    </FrameLayout>
</layout>